{
  "name": "luiznormanha.dev",
  "type": "module",
  "description": "Portfolio site for Luiz Normanha.",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
