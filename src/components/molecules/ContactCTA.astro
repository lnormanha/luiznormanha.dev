---
import CallToAction from "@components/atoms/CallToAction.astro";
import Icon from "@components/atoms/Icon.astro";

import i18nStrings from "@i18n";

const locale = Astro.url.pathname.slice(1, 3) === "pt" ? "pt" : "en";
---

<aside>
  <h2>{i18nStrings[locale].footer.tagline}</h2>
  <CallToAction href="mailto:me@example.com">
    {i18nStrings[locale].buttons["send-message"]}
    <Icon icon="paper-plane-tilt" size="1.2em" />
  </CallToAction>
</aside>

<style>
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 5rem 1.5rem;
    background-color: var(--gray-999-basis);
  }

  h2 {
    font-size: var(--text-xl);
    text-align: center;
    max-width: 15ch;
  }

  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    h2 {
      font-size: var(--text-3xl);
      text-align: left;
    }
  }
</style>
