---
interface Props {
  title: string;
  company: string;
  location: string;
  period: string;
}
const { title, company, location, period } = Astro.props;
---

<div class="flex flex-col space-y-2">
  <h3 class="font-heading text-xl font-bold">{title}</h3>
  <h4 class="text-md font-heading font-semibold">{company} | {location}</h4>
  <p class="text-md">{period}</p>
</div>
